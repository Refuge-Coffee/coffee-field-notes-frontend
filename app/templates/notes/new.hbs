{{outlet}}

<div class="container">
  <div class="form-box">
    <form onSubmit={{action 'createNote'}}>
      <div class="input-group">
        <h4>Content</h4>
        {{textarea value=model.content rows=10}}
      </div>
      <div class="input-group">
        <h4>Time of Day</h4>
        {{input value=model.timeOfDay type='text'}}
      </div>
      <button {{action 'createNote'}}>
        Create Note
      </button>
    </form>
  </div>
</div>
